<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="data"
            type="com.example.cyphers_matching_search_system.battleitemInfo.BattleitemData" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
        <ImageView
            android:id="@+id/battleitemImage"
            android:layout_width="101dp"
            android:layout_height="93dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="23dp"
            android:layout_marginRight="23dp"
            app:imageURL="@{data.itemIamge}"
            app:layout_constraintEnd_toStartOf="@+id/battleitemName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />
    
        <TextView
            android:id="@+id/battleitemName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="54dp"
            android:layout_marginRight="54dp"
            android:layout_marginBottom="14dp"
            android:text="@{data.itemName}"
            app:layout_constraintBottom_toBottomOf="@+id/battleitemImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/battleitemImage"
            app:layout_constraintTop_toTopOf="@+id/battleitemImage" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>