<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="androidx.core.content.ContextCompat" />
        <variable
            name="data"
            type="com.example.cyphers_matching_search_system.battleitemInfo.detail.BattleitemInfoDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/battleitemImage"
            android:layout_width="98dp"
            android:layout_height="114dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="36dp"
            app:imageURL="@{data._battleitemImage}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="167dp"
            android:layout_height="75dp"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:text="@={data._battleitemName}"
            android:textColor="@{ContextCompat.getColor(context, data._battleitemNameColor)}"
            app:layout_constraintStart_toEndOf="@+id/battleitemImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Explain"
            android:layout_width="101dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="@={data._battleitemExplain}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/battleitemImage" />

        <TextView
            android:id="@+id/ExplainDetail"
            android:layout_width="349dp"
            android:layout_height="282dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="72dp"
            android:text="@={data._battleitemExplainDetail}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Explain" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>